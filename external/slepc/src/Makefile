########################################################################
OBJS  = external_slepc.o
INC   = -I../include
LIB   = ../lib/libslepc.a
CC    = gcc
CFLAG = -g
########################################################################
RM           = rm
RMFLAGS      = -f
ARCH         = ar
ARCHFLAGS    = cr
RANLIB       = ranlib
########################################################################
all:

lib:    $(LIB)

clean: 
	@$(RM) $(RMFLAGS) $(OBJS) $(LIB)

########################################################################
.c.o:
	@echo '$(CC) -c $(CFLAGS) ' $*.c
	@$(CC) $(CFLAGS) -c $*.c -o $*.o $(INC)

########################################################################
$(LIB): $(OBJS)
	@echo ''
	@echo 'Creating library $(LIB)'
	@$(ARCH) $(ARCHFLAGS) $(LIB)  $(OBJS)
	@$(RANLIB) $(LIB)

########################################################################
